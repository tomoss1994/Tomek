<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:theme="@style/AppTheme.Base"
    android:background="@color/indigo_400">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/indigo_300"
        android:measureAllChildren="false"
        android:layout_below="@+id/card_view3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/card_view3"
        android:layout_alignStart="@+id/card_view3"
        android:layout_alignRight="@+id/card_view3"
        android:layout_alignEnd="@+id/card_view3">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="BATTERY USAGE"
                android:id="@+id/button"
                android:background="@color/indigo_300"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/indigo_300"
        card_view:contentPadding="5dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progressbar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cpv_animAutostart="false"
                app:cpv_indeterminate="false"
                app:cpv_color="#ffffff"
                app:cpv_thickness="10dp"
                android:rotation="-90"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/indigo_300"
        android:layout_gravity="right"
        android:background="@color/indigo_300"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/card_view"
        android:layout_alignEnd="@+id/card_view"
        android:layout_alignLeft="@+id/card_view"
        android:layout_alignStart="@+id/card_view">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BATTERY SAVE"
                android:id="@+id/button2"
                android:background="@color/indigo_300"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/indigo_300"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:background="@color/indigo_300"
        android:layout_above="@+id/card_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/Base.Widget.AppCompat.ListView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BASIC INFO"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TEMPERATURE"
                android:id="@+id/textView4"
                android:textColor="#ffffff"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView5"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:text="35.7"
                android:textStyle="bold"
                android:typeface="normal"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="STATUS"
                android:id="@+id/textView6"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/textView2"
                android:gravity="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:autoText="false"
                android:typeface="normal"
                android:textStyle="bold"
                android:text="CHARGING"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="HEALTH"
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/textView4"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="GOOD"
                android:id="@+id/textView8"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_above="@+id/textView4"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view5"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        android:layout_gravity="right"

        card_view:cardBackgroundColor="@color/indigo_300"
        android:layout_toRightOf="@+id/card_view"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/card_view"
        android:layout_alignBottom="@+id/card_view2"
        android:layout_alignRight="@+id/card_view4"
        android:layout_alignEnd="@+id/card_view4"
        android:theme="@style/AppTheme.Base">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view6"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="2dp"
        android:layout_gravity="right"
        card_view:cardBackgroundColor="@color/indigo_300"
        android:theme="@style/AppTheme.Base"
        android:layout_toLeftOf="@+id/card_view"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/card_view5"
        android:layout_alignTop="@+id/card_view"
        android:layout_alignLeft="@+id/card_view4"
        android:layout_alignStart="@+id/card_view4">

        <ScrollView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/imageView1"
            android:fillViewport="false">
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:backgroundTint="@color/amber_200">
                <ImageButton android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Button"
                    android:src="@drawable/computer190"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false"
                    style="@style/AppTheme"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:background="@color/indigo_300"
                    android:padding="5dp"
                    android:baselineAlignBottom="false"
                    android:theme="@style/AppTheme.Base"
                    android:tint="@color/indigo_400"
                    android:nestedScrollingEnabled="false" />
                <ImageButton android:id="@+id/button22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:text="Button"
                    android:src="@drawable/blueetooth"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false"
                    android:background="@color/indigo_300"
                    android:cropToPadding="false"
                    android:padding="5dp"
                    android:tint="@color/indigo_400" />
                <ImageButton android:id="@+id/button3"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:text="Button"
                    android:src="@drawable/opposite5"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false"
                    android:background="@color/indigo_300"
                    android:padding="5dp"
                    android:tint="@color/indigo_400" />

                <ImageButton android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:text="Button"
                    android:src="@drawable/wibracje"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false"
                    android:background="@color/indigo_300"
                    android:padding="5dp"
                    android:tint="@color/indigo_400"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </ScrollView>



    </android.support.v7.widget.CardView>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:enabled="true"
        android:layout_alignTop="@+id/card_view5"
        android:layout_alignRight="@+id/card_view5"
        android:layout_alignEnd="@+id/card_view5"
        android:layout_alignLeft="@+id/card_view5"
        android:layout_alignStart="@+id/card_view5"
        android:layout_margin="2dp"
        android:textOn="AUTO ON"
        android:textOff="AUTO OFF"
        android:checked="false"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:clickable="true" />

    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
        android:layout_width = "fill_parent"
        android:layout_height = "match_parent"
        android:fillViewport="false"
        android:layout_gravity="bottom"
        android:id="@+id/view"
        android:rotation="180"
        android:layout_below="@+id/toggleButton"
        android:layout_alignLeft="@+id/card_view5"
        android:layout_alignStart="@+id/card_view5"
        android:layout_alignRight="@+id/card_view5"
        android:layout_alignEnd="@+id/card_view5"
        android:layout_alignBottom="@+id/card_view5">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/SeekBar"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"

            android:thumb="@drawable/geometry29" />
    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>




</RelativeLayout>