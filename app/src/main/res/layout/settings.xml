<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:measureWithLargestChild="false"
    android:divider="@color/amber_200"
    android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
    android:background="@color/indigo_400">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/indigo_300"
        android:measureAllChildren="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_margin="5dp">
    <!--  Screen Design for Food tab -->
    <FrameLayout android:id="@android:id/tabcontent"
        android:layout_height="fill_parent" android:layout_width="fill_parent">
        <LinearLayout
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:baselineAligned="false">


            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fahrenheit"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="FAHRENHEIT"
                android:text="FAHRENHEIT"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="18dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@drawable/gradient"
                android:layout_height="2dp"></View>
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/START"
                android:hint="Date - DD/MM/YYYY "
                android:text="START ON CHARGE"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="18dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@drawable/gradient"
                android:layout_height="2dp"></View>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtAmount"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Amount"
                android:text="CHANGE THEME"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="18dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@drawable/gradient"
                android:layout_height="2dp"></View>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPayee"
                android:hint="Payee"
                android:text="DEFINE SAVE BUTTON"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="18dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@drawable/gradient"
                android:layout_height="2dp"></View>


        </LinearLayout>
    </FrameLayout>
 </android.support.v7.widget.CardView>
</LinearLayout>